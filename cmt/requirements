# _____________________________________________________________

use GlastPolicy v*
use Event       v9r*
use GlastSvc    v9r*
use astro       v1r*

# Making this use public again -  might allow cfitsio to be seen by other
# packages
use GRB         v4*  -no_auto_imports

#  set  path to particle properties (used by Gaudi ParticlePropertySvc) 
#  $(FlUXSVCROOT)/cdf/particleproperty.cdf
set LHCBDBASE  "${FLUXSVCROOT}"

apply_pattern packageShr
apply_pattern package_include

# _____________________________________________________________

private
use ntupleWriterSvc v3r*
use XMLEXT * IExternal
# libraries that are only linked locally
use flux        v8*  -no_auto_imports
#use GRB         v4*  -no_auto_imports

macro  source  "*.cxx"  WIN32 "*.h *.cxx *.txt"
macro_append includes  ' $(ppcmd)"$(FLUXROOT)" '
#  shared component library 
apply_pattern package_Cshlibflags

private
library  FluxSvc   -import=flux -import=GRB \
     -s=../FluxSvc $(source) \
     -s=Dll *.cxx\
     -s=../src $(source)


#  build the test 
apply_pattern  package_test  import=flux 
macro_append   test_FluxSvc_files ""    WIN32 "test/*.xml"



